---
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);
---

<a
  href={session ? "/account" : "/login"}
  class="flex items-center justify-center p-2.5 text-white hover:bg-white/40 rounded-lg cursor-pointer transition-colors"
>
  <svg
    class="size-4.5"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
      d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path><path
      d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path></svg
  >
</a>
