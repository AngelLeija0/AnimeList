---
import AnimeService from "@/lib/animeService";
import AnimeCard from "@/components/AnimeCard.astro";

const categories = [
  {
    title: "More recents",
    items: await AnimeService.get({
      size: 12,
      sortBy: "release_date:desc",
    }),
    page: "/animes?category=recents",
  },
  {
    title: "Most popular",
    items: await AnimeService.get({
      size: 12,
      sortBy: "imdb_rate:desc",
    }),
    page: "/animes?category=populars",
  },
];
---

<section class="flex flex-col px-8 py-8 mb-4 gap-12">
  {
    categories.map((category) => (
      <div class="flex flex-col">
        <div class="flex mb-6">
          <h2 class="text-2xl text-white font-semibold">{category.title}</h2>
        </div>
        <div class="flex gap-4 relative overflow-hidden">
          {category.items.map((anime) => (
            <AnimeCard anime={anime} className="min-w-78" />
          ))}
          <a
            href={category.page}
            class="absolute z-10 top-1/2 -right-5 -translate-y-1/2 h-full w-20 bg-black/60 hover:bg-black/70 flex items-center justify-center"
          >
            <span class="rotate-270 text-white text-sm font-semibold cursor-pointer">
              Ver m√°s
            </span>
          </a>
        </div>
      </div>
    ))
  }
</section>
